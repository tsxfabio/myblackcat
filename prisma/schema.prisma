generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  dateOfBirth DateTime

  @@map("users")
}

model Pet {
  id          String   @id @default(uuid())
  name        String
  dateOfBirth DateTime

  @@map("pets")
}

model Adoption {
  id        String   @id @default(uuid())
  situation String
  userId    String
  petId     String
  date      DateTime

  @@map("adoptions")
}
